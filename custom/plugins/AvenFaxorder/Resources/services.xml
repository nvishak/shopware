<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="aven_faxorder.components.document" class="AvenFaxorder\Components\AvenFaxorderDocument">
        </service>

        <service id="aven_faxorder.subscriber.templates" class="AvenFaxorder\Subscriber\TemplateRegistration">
        	<argument type="service" id="service_container" />
            <argument>%aven_faxorder.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <argument type="service" id="aven_faxorder.components.document"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
