{
	"name" : "crefo/shopware-plugin",
	"description" : "A Creditreform plugin for Shopware",
	"keywords" : [
		"shopware",
		"creditreform"
	],
	"type" : "shopware-plugin",
	"require" : {
		"php" : ">=5.6.0|7.0.x",
		"ext-date": "*",
		"ext-dom": "*",
		"ext-hash": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-mcrypt": "*",
		"ext-openssl": "*",
		"ext-SimpleXML": "*",
		"ext-soap" : "*",
		"ext-SPL": "*",
		"ext-xml": "*",
		"ext-zip": "*",
		"lib-openssl": "*",
		"monolog/monolog": "*",
		"defuse/php-encryption": "2.1.0"
	},
	"require-dev" : {
		"phpunit/phpunit" : "~5.7.20@stable",
		"friendsofphp/php-cs-fixer" : "*"
	},
	"autoload" : {
		"files" : ["autoload.php"]
	},
	"autoload-dev" : {
		"files" : ["autoload.php"],
		"psr-4" : {
			"CrefoShopwarePlugin\\tests\\UnitTests\\" : "tests/UnitTests"
		}
	},
	"scripts" : {
		"pre-install-cmd" : [
			"set http_proxy=127.0.0.1:3128",
			"set https_proxy=127.0.0.1:3128"
		],
		"pre-update-cmd" : [
			"set http_proxy=127.0.0.1:3128",
			"set https_proxy=127.0.0.1:3128"
		]
	}
}
